Edit the restaurant here.<br/>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :category %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :url %>
  <%= f.input :venue_id %>
  <%= f.submit %>
<% end %>

<br/>
<%= link_to 'Remove this restaurant from your list!', "#{restaurants_path}/#{@restaurant.id}", method: :delete %>

